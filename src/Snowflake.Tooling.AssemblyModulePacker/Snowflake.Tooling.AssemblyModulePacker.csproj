<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>exe</OutputType>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <TargetFrameworks>netcoreapp2.0;netcoreapp1.1;netcoreapp1.0</TargetFrameworks>
    <RootNamespace>Snowflake.Tooling.AssemblyModulePacker</RootNamespace>
    <AssemblyName>dotnet-pack-snowflake</AssemblyName>
    <ApplicationIcon />
    <OutputTypeEx>exe</OutputTypeEx>
    <StartupObject />
    <Version>1.1.0</Version>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <RuntimeIdentifiers>win10-x64;linux-x64;macos-x64</RuntimeIdentifiers>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>Snowflake Developers</Authors>
    <Title>Snowflake .NET Module Packer Tooling</Title>
    <PackageType>DotNetCliTool</PackageType>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
    <PackageReference Include="System.ValueTuple" Version="4.4.0-preview1-25305-02" />
    <PackageReference Update="Microsoft.NETCore.App" Version="2.0.0-preview1-002111-00" />
  </ItemGroup>

</Project>